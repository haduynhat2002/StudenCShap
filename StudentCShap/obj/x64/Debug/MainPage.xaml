<Page
    x:Class="StudentCShap.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudentCShap"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:ConnectionId='2' HorizontalAlignment="Left" Margin="33,26,0,0" Text="Roll number" TextWrapping="Wrap" VerticalAlignment="Top"                                              />
        <TextBox HorizontalAlignment="Left" Margin="120,19,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="281" PlaceholderText="Please enter rollnumber"/>
        <TextBlock HorizontalAlignment="Left" Margin="33,73,0,0" Text="Full name" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="120,66,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="281" PlaceholderText="Please enter full name"/>
        <TextBlock x:ConnectionId='3' HorizontalAlignment="Left" Margin="33,115,0,0" Text="Avatar" TextWrapping="Wrap" VerticalAlignment="Top"                                              />
        <TextBox HorizontalAlignment="Left" Margin="120,113,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="281" PlaceholderText="Please enter avatar"/>
        <TextBlock HorizontalAlignment="Left" Margin="33,169,0,0" Text="Phone" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.179,0.579"/>
        <TextBox HorizontalAlignment="Left" Margin="120,162,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="281" PlaceholderText="Please enter phone"/>
        <TextBlock HorizontalAlignment="Left" Margin="426,26,0,0" Text="Email" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="508,19,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="299" PlaceholderText="Please enter email"/>
        <TextBlock x:ConnectionId='4' HorizontalAlignment="Left" Margin="426,75,0,0" Text="Address" TextWrapping="Wrap" VerticalAlignment="Top"                                              />
        <TextBox HorizontalAlignment="Left" Margin="508,66,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="299" PlaceholderText="Please enter address"/>
        <TextBlock HorizontalAlignment="Left" Margin="426,119,0,0" Text="Birthday" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="426,168,0,0" Text="Gender" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <RadioButton Content="Male" Margin="508,161,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Female" Margin="607,162,0,0" VerticalAlignment="Top"/>
        <DatePicker Margin="508,113,0,0" VerticalAlignment="Top" Width="299"/>
        <Button Content="Submit" Margin="120,238,0,0" VerticalAlignment="Top" Width="687"/>

    </Grid>
</Page>

